@page
@model WebApp.Pages.UsersModel
@{
}
<script src="~/js/pages/users.js"></script>

<h1>Users List</h1>
<div class="bs-docs-section">
	<div class="row">
		<legend>Users List</legend>
		<div class="col-lg-12">
			<table id="tblUsers" class="display user-select-none" style="width:100%">
				<thead>
				<tr>
					<th>Id</th>
					<th>User Code</th>
					<th>Name</th>
					<th>Email</th>
					<th>Birth Date</th>
					<th>Status</th>
				</tr>
				</thead>
			</table>
		</div>
	</div>
	
	<div class="row">
		<div class="col-lg-6">
			<div class="bs-component">
				<form>
					<fieldset>
						<legend>User form</legend>
						<div class="form-group">
							<label for="txtId" class="form-label mt-4">User ID</label>
							<input id="txtId" readonly type="number" class="form-control">
						</div>
						
						<div class="form-group">
							<label for="txtUserCode" class="form-label mt-4">User Code</label>
							<input id="txtUserCode" type="text" class="form-control">
						</div>
						
						<div class="form-group">
							<label for="txtName" class="form-label mt-4">Name</label>
							<input id="txtName" type="text" class="form-control">
						</div>
						
						<div class="form-group">
							<label for="txtEmail" class="form-label mt-4">Email</label>
							<input id="txtEmail" type="text" class="form-control">
						</div>
						
						<div class="form-group">
							<label for="txtBirthDate" class="form-label mt-4">Birth Date</label>
							<input id="txtBirthDate" type="date" class="form-control">
						</div>
						
						<div class="form-group">
							<label for="txtStatus" class="form-label mt-4">Status</label>
							<select id="txtStatus" class="form-select">
								<option value="Activo">Activo</option>
								<option value="Inactivo">Inactivo</option>
							</select>
						</div>
						
						<div class="form-group">
							<label for="txtPassword" class="form-label mt-4">Password</label>
							<input id="txtPassword" type="password" class="form-control">
						</div>
					</fieldset>
				</form>
				<br/>
				<button id="btnCreate" class="source-button btn btn-primary btn-xs" type="button">Create</button>
				<button id="btnUpdate" class="source-button btn btn-info btn-xs" type="button">Update</button>
				<button id="btnDelete" class="source-button btn btn-danger btn-xs" type="button">Delete</button>
			</div>
		</div>
		
		<div class="col-lg-6">
			<div class="bs-component">
				<form>
					<fieldset>
						<legend>Search User</legend>
						<div class="form-group">
							<label for="searchById" class="form-label mt-4">ID</label>
							<input id="searchById" type="text" class="form-control">
						</div>
					</fieldset>
				</form>
				<br />
				<button id="btnSearch" class="source-button btn btn-primary btn-xs" type="button">Search by ID</button>
				
			</div>
		</div>
	</div>
</div>


